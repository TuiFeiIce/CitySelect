<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/one" android:color="@color/gray" />
            <solid android:color="@color/gray_bg" />
            <!-- 圆角 -->
            <corners android:radius="@dimen/ten" />
            <!-- 渐变 -->
            <gradient android:endColor="@color/gray_bg" android:gradientRadius="@dimen/fifty" android:startColor="@color/blue" android:type="radial" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="@dimen/one" android:color="@color/gray" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/ten" />
        </shape>
    </item>
</selector>